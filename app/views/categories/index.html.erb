<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<div id="categories_list">
  <a href="<%= url_for @categories.first %>">
    <div id="craft_beers" class="cat_image"><div class='cat_name'>Craft Beer</div></div>
  </a>
  <a href="<%= url_for @categories.second %>">
    <div id="brew_kits" class="cat_image"></div>
  </a>
  <a href="<%= url_for @categories.third %>">
    <div id="ingredients" class="cat_image"></div>
  </a>
  <a href="<%= url_for @categories.fourth %>">
    <div id="accessories" class="cat_image"></div>
  </a>
</div>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
